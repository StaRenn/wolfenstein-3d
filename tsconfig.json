{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./*"]
    },
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "importsNotUsedAsValues": "error",
    "moduleResolution": "node",
    "strictNullChecks": true
  }
}
