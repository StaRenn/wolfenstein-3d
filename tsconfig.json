{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "include": ["src", "misc", "rspack.config.js", ".eslintrc.js"]
}
